{% extends 'base.html.twig' %}

{% block title %}Chatons du propriétaire {{ proprietaire.prenom }} {{ proprietaire.nom }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Chatons du propriétaire {{ proprietaire.prenom }} {{ proprietaire.nom }}</h1>
    <div class="row">
        {% for c in chatons %}
            <div class="col col-3">
                <div class="card"><img src="{{ c.photo }}" alt=""
                                       class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">{{ c.nom }}</h2>
                        {% if (c.sterilise == 0) %}
                            <span>Ce chaton n'est pas castrer</span>
                        {% elseif (c.sterilise == 1) %}
                            <span>Ce chaton est castrer</span>
                        {% endif %}
                        <div>
                            <a href="{{ path("app_chaton_modifier", {"id": c.id}) }}" class="btn btn-primary">modifier</a>
                            <a href="{{ path("app_chaton_supprimer", {"id": c.id}) }}" class="btn btn-danger">supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path("app_chaton_ajouter") }}" class="mt-5 btn btn-primary">Ajouter un chaton</a>
</div>
{% endblock %}
